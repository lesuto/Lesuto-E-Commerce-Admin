{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@lesuto/ui": ["src/lesuto-ui"]
    }
  },
  "include": [
    "src/**/*.ts",              // your normal server TS files
    "src/lesuto-ui/**/*.ts"     // explicitly include the UI files
  ],
  "exclude": [
    "node_modules",
    "migration.ts",
    "src/plugins/**/ui/*",
    "admin-ui",
    "src/plugins/**/dashboard/*",
    "src/gql/*",
    "vite.*.*ts"
  ],
  "ts-node": {
    "files": true
  },
  "references": [
    { "path": "./tsconfig.dashboard.json" }
  ]
}